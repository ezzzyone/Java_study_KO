<?xml version="1.0" encoding="UTF-8"?>
		<!DOCTYPE mapper
		    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
		    
		    
<mapper namespace="com.ko.home.board.notice.NoticeDAO">

<sql id="search">
where
	<choose>
		<when test="kind=='title'">title</when>
		<when test="kind=='writer'">writer</when>
		<otherwise>contents</otherwise>
	</choose>
	LIKE '%'||#{search}||'%'
</sql>

<select id="getList" resultType="NoticeDTO" parameterType="Pager" >
select * from
	(select rownum R, N.* from 
	(select * from noticetable
	
<include refid="search"></include>
	
	order by num desc)N)
where R between #{startRow} and #{lastRow}
</select>

<select id="getDetail" parameterType="BoardDTO" resultType="NoticeDTO" >
select * from NOTICETABLE where NUM =#{num}
</select>

<insert id="setAdd" parameterType="NoticeDTO">
insert into NOTICETABLE(NUM, TITLE, CONTENTS, WRITER, REGDATE, HIT) values (BOARD_SEQ.NEXTVAL,#{title},#{contents},#{writer},sysdate,0)
</insert>

<update id="setUpdate" parameterType="NoticeDTO" >
UPDATE NOTICETABLE SET TITLE=#{title}, CONTENTS=#{contents} where WRITER=#{writer}
</update>

<delete id="setDelete" parameterType="NoticeDTO">
DELETE NOTICETABLE WHERE NUM=#{num}
</delete>

<select id="getCount" resultType="Long" parameterType="Pager" >
select count(num) from noticetable

<include refid="search"></include>
	
</select>
		
</mapper>